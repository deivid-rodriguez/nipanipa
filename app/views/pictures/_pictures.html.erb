<% if pictures.empty? %>
  <%= render 'shared/empty', message: 'nopictures' %>
<% else %>
  <ul class='picture-thumbnails'>
    <% pictures.each do |p| %>
      <li class='col-md-6'>
        <div class='picture-thumbnail'>
          <% if can? :manage, p %>
            <div class='actions'>
              <%= link_to t('.delete'),
                          user_picture_path(current_user, p),
                          method: :delete %> |
              <%= link_to t('.edit'),
                          edit_user_picture_path(current_user, p),
                          name: "image-#{p.id}" %>
            </div>
          <% end %>
          <%= image_tag p.image.url(:large) %>
          <div class="caption">
            <h5><%= p.name %></h5>
          </div>
        </div>
      </li>
    <% end %>
  </ul>
<% end %>

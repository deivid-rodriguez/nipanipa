- provide :title, @conversation.subject

.col-md-12
  .row.main-titled
    .col-md-offset-2.col-md-7.title
      h3= @conversation.subject

    .col-md-1.back
      = link_to t('.back_html'), conversations_path

    .col-md-offset-2.col-md-8.chat-list
      ul#chat-list
        - for message in @conversation.messages
          li = render message

    .col-md-offset-2.col-md-8
      .row.message-left
        .col-md-2.message-from
          = avatar_for current_user, style: :thumb_message
        .col-md-10.message-content
          .bubble-triangle
          = form_tag reply_conversation_path(@conversation), method: :put,
                                                             remote: true do
            = text_area_tag :body
            = submit_tag t('.reply'),
                         class: 'btn btn-default primary-button pull-right'

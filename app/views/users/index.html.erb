<%= provide :title, index_title(params[:type]) %>

<div class="row">
  <aside class="span3 sidebar_users">
    <ul class="nav nav-list">
      <li class="nav-header"><%= t '.places' %></li>
      <li class="nav-header"><%= t '.people' %></li>
      <li class="<%= 'active' if params[:type] == 'host' %>">
        <%= link_to t('.hosts'), users_path(type: 'host') %>
      </li>
      <li class="<%= 'active' if params[:type] == 'volunteer' %>">
        <%= link_to t('.volunteers'), users_path(type: 'volunteer') %>
      </li>
    </ul>
  </aside>
  <div class="span9">
    <ul class="thumbnails">
      <%= render @users %>
    </ul>
    <%= will_paginate %>
  </div>
</div>


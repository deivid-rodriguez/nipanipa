<li class="span9 offset3">
  <div class="thumbnail user-thumbnail">
    <div class="user-thumbnail-gravatar">
      <%= gravatar_for user, size: 148, class: "pull-left" %>
    </div>
    <div class="user-thumbnail-data">
      <h5>
      <%= link_to user.name, user %>
      (<%= "#{user.state}, #{user.country}" %>)
      </h5>
      <p class="user-thumbnail-login">
        <%= render 'shared/current_or_last_login', user: user %>
      </p>
      <p class="user-thumbnail-shortdesc">
        <%= truncate user.description, length: 250,
                                       separator: ' ',
                                       omission: "..."  %>
      </p>
      <%= image_tag 'rating.png', size: "40x40",
                                  alt: "rating",
                                  title: "User Rating",
                                  class: "user-thumbnail-rating" %>
      <%= image_tag 'available_now.png', size: "40x40",
                                         alt: "available now",
                                         title: "Available now!",
                                        class: "user-thumbnail-available" %>
    </div>
  </div>
</li>

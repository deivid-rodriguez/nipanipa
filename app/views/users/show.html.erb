<% provide :title, @user.name %>

<div class="row profile-wrapper">

  <%= render 'shared/profile_header', user: @user,
                                      page_id: @page_id,
                                      given_feedback: @given_feedback %>

  <div class="span12 profile-content">
    <div class="row profile-content-wrapper">

      <div class="span6">
        <div class="box">
          <%= render 'edit_link', user: @user %>
          <h3><%= t '.description' %></h3>
          <p><%= @user.description %></p>
        </div>

        <div class="box">
          <%= render 'edit_link', user: @user %>
          <h3><%= t ".skills_#{@user.type.underscore}" %></h3>
          <p><%= @user.skills %></p>
        </div>
      </div>

      <div class="span6">
        <% if @user.type == "Host" %>
          <div class="box">
            <%= render 'edit_link', user: @user %>
            <h3><%= t ".accomodation" %></h3>
            <p><%= @user.accomodation %></p>
          </div>
        <% end %>

        <div class="box">
          <h3><%= t '.pictures' %></h3>
          <% @user.pictures.each do |p| %>
            <%= image_tag p.image.url(:small) unless p.avatar%>
          <% end %>
        </div>

        <div class="box">
          <%= render partial: 'feedbacks/feedbacks', object: @feedback_pairs %>
        </div>
      </div>

    </div>
  </div>

</div>

li
  = link_to user do
    .user-thumbnail
      .user-thumbnail-badges
        = avatar_for user
        .karma
          span
            strong= user.karma
          = t('.karma')

      .user-thumbnail-data
        h5= user.name

        .user-thumbnail-login
          = render 'shared/current_or_last_login', user: user

        .user-thumbnail-location
          = t('.location') + ': '
          = user_location user

        .user-thumbnail-shortdesc
          = truncate user.description, length: 400,
                                       separator: ' ',
                                       omission: '...'

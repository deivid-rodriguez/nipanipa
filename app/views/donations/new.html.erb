<% provide :title, t('.title') %>

<div class='row static-page'>
  <h2><%= t '.title' %></h2>

  <p><%= t '.intro' %></p>

  <div class='col-md-6'>
    <div class='contribute-thumbnail'>
      <h3><%= t '.donate_title' %></h3>
      <p><%= t '.donate_desc' %></p>
      <%= render 'form' %>

      <%= render 'flattr' %>
    </div>
  </div>

  <div class='col-md-6'>
    <div class='contribute-thumbnail'>
      <h3><%= t '.contribute_title' %></h3>
      <ul>
        <li>
          <p>
            <%= t '.contribute_desc_dev_html',
                  git_url: link_to(
                    t('.here'),
                    'https://github.com/deivid-rodriguez/nipanipa') %>
          </p>
        </li>
        <li>
          <p><%= t '.contribute_desc_tr' %></p>
        </li>
        <li>
          <p>
            <%= t '.contribute_desc_bug_html',
                  issues_url: link_to(
                    t('.here'),
                    'https://github.com/deivid-rodriguez/nipanipa/issues') %>
          </p>
        </li>
      </ul>
    </div>
  </div>
</div>
</div>

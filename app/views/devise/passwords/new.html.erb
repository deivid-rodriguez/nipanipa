<% provide :title, t('.forgotten?') %>

<div class='signin-thumbnail'>
  <div class='header'>
    <%= image_tag 'host1_small.png', alt: 'host' %>
    <%= image_tag 'volunteer1_small.png', alt: 'volunteer' %>
    <%= image_tag 'explore_small.png', alt: 'explore' %>
    <h2><%= t '.forgotten?' %></h2>
  </div>

  <%= simple_form_for(resource, as: resource_name,
                                url: password_path(resource_name),
                                html: { method: :post },
                                wrapper: :vertical_form) do |f| %>
      <%= f.input :email, autofocus: true, label: false %>
      <%= f.button :submit, t('.send_instructions'), class: 'primary-button' %>
  <% end %>
</div>
